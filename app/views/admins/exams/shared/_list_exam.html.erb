<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex">
      <h6 class="m-0 font-weight-bold text-primary">
        <%= t('.exam', size: exams_size) %> &emsp;
      </h6>
      <h6 class="m-0 font-weight-bold text-primary">
        <i class="fas fa-plus-circle text-primary"></i>
        <%= link_to t('.new_exam'), new_admins_exam_path %>
      </h6>
    </div>
    <div class="card-body">
      <div class="table-responsive-xl">
        <table class="table table-striped text-center w-100 border" cellspacing="0">
          <thead>
            <tr>
              <th>ID</th>
              <th><%= t('.category') %></th>
              <th><%= t('.content') %></th>
              <th><%= t('.status') %></th>
              <th><%= t('.total_question') %></th>
              <th colspan="3"><%= t('.action') %></th>
            </tr>
          </thead>
          <tbody>
            <% @exams.each do |exam| %>
              <tr>
                <td>
                  <%= exam.id %>
                </td>
                <td class="text-info">
                  <%= exam.exam_category %>
                </td>
                <td>
                  <%= exam.content%>
                </td>
                <td class="text-<%= exam.check_exam_status %>">
                  <%= exam.status%>
                </td>
                <td>
                  <%= exam.exam_question_size %>
                </td>
                <td class="w-5">
                  <%= link_to admins_exam_path(exam) do %>
                  <i class="fas fa-eye text-info"></i>
                  <% end %>
                </td>
                <% if exam.status_draft? %>
                  <td class="w-5">
                    <%= link_to edit_admins_exam_path(exam) do %>
                      <i class="far fa-edit text-warning"></i>
                    <% end %>
                  </td>
                  <td class="w-5">
                    <%= link_to admins_exam_path(exam), method: :delete, data: {confirm: 'Are you sure to delete this exam?'} do %>
                      <i class="fas fa-trash text-danger"></i>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
