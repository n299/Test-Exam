<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3"> 
      <%= link_to t('.back'), admins_categories_path, class: "m-0 font-weight-light text-primary" %>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <%= form_for [:admins, @category] do |f| %>
          <div class="d-flex justify-content-center">
            <div class="form-group text-muted w-50">
              <%= f.text_area :content, class: "form-control mb-3", placeholder: t('.content'), required: true, cols: '20', rows: '2' %>
            </div>
          </div>
          <div class="text-right">
            <%= f.submit class: "btn btn-primary" %>
          </div>  
        <% end %>
      </div>
    </div>
  </div>
</div>
