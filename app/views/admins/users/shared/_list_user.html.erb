<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex">
      <h6 class="m-0 font-weight-bold text-primary">
        <%= t('.users_size', size: users_size) %>
      </h6>
      <h6 class="m-0 font-weight-bold text-primary ml-2">
        <i class="fas fa-plus-circle text-primary"></i>
        <%= link_to t('.new_user'), new_admins_user_path %>
      </h6>
    </div>
    <%= render 'admins/users/shared/search' %>
    <div class="card-body">
      <div class="table-responsive-xl">
        <% if @users.present? %>
          <div class='text-success ml-4'>
            <i class="fas fa-globe-europe"></i>: 
            <%= t('.results', users_size: @users.size) %>
          </div>
          <table class="table table-striped text-center w-100" id="table-tag" cellspacing="0">
            <thead>
              <tr>
                <th>
                  ID
                </th>
                <th>
                  <%= t('.avatar') %>
                </th>
                <th>
                  <%= t('.user_name') %>
                </th>
                <th>
                  <%= t('.full_name') %>
                </th>
                <th>
                  <%= t('.phone') %>
                </th>
                <th colspan="2">
                  <%= t('.action') %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= user.id %>
                  </td>
                  <td>
                    <%= image_tag user.default_avatar_user, class: "img-size-2em" %>
                  </td>
                  <td class="text-info">
                    <%= user.username %>
                  </td>
                  <td>
                    <%= user.full_name %>
                  </td>
                  <td>
                    <%= user.phone %>
                  </td>
                  <td>
                    <%= link_to edit_admins_user_path(user) do %>
                      <i class="far fa-edit text-warning"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to admins_user_path(user), method: :delete, data: {confirm: t('.confirm') } do %>
                      <i class="fas fa-trash text-danger"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class='text-center text-muted'>
            <i class="far fa-ques tion-circle"></i>
            <%= t('.no_result_html') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
