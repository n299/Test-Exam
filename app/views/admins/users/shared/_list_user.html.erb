<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex">
      <h6 class="m-0 font-weight-bold text-primary">
        Users ( <%= users_size %> ) &emsp;
      </h6>
      <h6 class="m-0 font-weight-bold text-primary">
        <i class="fas fa-plus-circle text-primary"></i>
        <%= link_to 'New User', new_admins_user_path %>
      </h6>
    </div>
    <div class="card-body">
      <div class="table-responsive-xl">
        <table class="table table-striped text-center w-100" id="table-tag" cellspacing="0">
          <thead>
            <tr>
              <th>ID</th>
              <th>Avatar</th>
              <th>User name</th>
              <th>Full name</th>
              <th>Phone</th>
              <th colspan="2">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= user.id %>
                </td>
                <td>
                  <%= image_tag default_avatar_user(user), class: "img-size-2em" %>
                </td>
                <td>
                  <%= user.username %>
                </td>
                <td>
                  <%= user.full_name %>
                </td>
                <td>
                  <%= user.phone %>
                </td>
                <td>
                  <%= link_to edit_admins_user_path(user) do %>
                    <i class="far fa-edit text-warning"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to admins_user_path(user), method: :delete, data: {confirm: 'Are you sure to delete this user?'} do %>
                    <i class="fas fa-trash text-danger"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
