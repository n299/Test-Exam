<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3"> 
      <%= link_to t('.back'), admins_users_path, class: "m-0 font-weight-light text-primary" %>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <%= form_for [:admins, @user] do |f| %>
          <div class="d-flex justify-content-center">
            <div class="form-group text-muted w-50 ">
              <%= render "admins/shared/messages" %>
              <%= f.text_field :email, class: "form-control mb-3", placeholder: "Email", required: true %>
              <%= f.text_field :username, class: "form-control mb-3", placeholder: "Username", required: true %>
              <%= f.password_field :password, class: "form-control mb-3", placeholder: "Password", required: true %>
            </div>
          </div>
          <div class="text-right">
            <%= f.submit class: "btn btn-primary" %>
          </div>  
        <% end %>
      </div>
    </div>
  </div>
</div>
